#!/bin/sh

if [ -d munin-scripts ]
then
  # Update this to point to the correct location of the MUNIN_LIBDIR
  export MUNIN_LIBDIR=/usr/share/munin
  cd munin-scripts
  for script in `ls`
  do
    if [ -x "$script" ]
    then
      echo "<<<munin-$script>>>"
      munin-run $script
      munin-run $script config
    fi
  done
  cd ..
fi

